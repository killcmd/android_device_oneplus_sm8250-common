<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          android:sharedUserId="android.uid.system"
          package="org.spark.device.DeviceSettings"
          android:versionCode="2"
          android:versionName="2.0" >

    <uses-permission android:name="android.permission.INJECT_EVENTS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.qualcomm.permission.USE_QCRIL_MSG_TUNNEL" />

    <protected-broadcast android:name="com.android.systemui.doze.pulse" />

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="29" />

    <application
        android:defaultToDeviceProtectedStorage="true"
        android:directBootAware="true"
        android:icon="@drawable/ic_settings_device"
        android:label="@string/device_title"
        android:theme="@style/Theme.SubSettingsBase">

        <!-- DC-Dimming Tile -->
        <service
            android:name=".DCModeTileService"
            android:icon="@drawable/ic_dc_mode"
            android:label="@string/dc_mode_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- DeviceSettings Activity -->
        <activity
            android:name=".DeviceSettingsActivity"
            android:label="@string/device_title">
            <intent-filter>
                <action android:name="com.android.settings.action.EXTRA_SETTINGS" />
            </intent-filter>
            <meta-data
                android:name="com.android.settings.icon"
                android:resource="@drawable/ic_settings_device" />
            <meta-data
                android:name="com.android.settings.category"
                android:value="com.android.settings.category.ia.homepage" />
            <meta-data android:name="com.android.settings.summary"
                android:resource="@string/device_summary" />
        </activity>

        <activity android:name=".DeviceSettings" />
        <activity android:name=".KeyHandler" />

        <receiver
            android:name="org.spark.device.DeviceSettings.Startup" 
            android:defaultToDeviceProtectedStorage="true"
            android:directBootAware="true"
            android:enabled="true">
            <intent-filter android:priority="100" >
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- DeviceSettings Tile -->
        <service
            android:name="org.spark.device.DeviceSettings.DeviceSettingsTileService"
            android:icon="@drawable/ic_settings_device_qs"
            android:label="@string/device_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- Dolby Tile -->
        <service
            android:name="org.spark.device.DeviceSettings.DolbyTileService"
            android:icon="@drawable/ic_dolby"
            android:label="@string/enable_dolby_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- DozeSettings Activity -->
        <activity
            android:name="org.spark.device.DeviceSettings.doze.DozeSettingsActivity"
            android:exported="true"
            android:label="@string/ambient_display_title"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Doze Service -->
		<service android:name="org.spark.device.DeviceSettings.doze.DozeService"
                 android:permission="OneplusDozeService">
        </service>

        <!-- DozeSettings Tile -->
         <service
            android:name="org.spark.device.DeviceSettings.doze.DozeTileService"
            android:icon="@drawable/ic_eye"
            android:label="@string/ambient_display_gestures_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- HBM Service -->
        <service android:name="org.spark.device.DeviceSettings.HBMModeService"
                 android:exported="false" />

        <!-- HBM Tile -->
        <service
            android:name="org.spark.device.DeviceSettings.HBMModeTileService"
            android:icon="@drawable/ic_hbm_mode"
            android:label="@string/tile_hbm_mode"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- HBM Service -->
        <service android:name="org.spark.device.DeviceSettings.HBMModeService"
            android:exported="false" />

        <!-- Auto HBM Service -->
        <service android:name="org.spark.device.DeviceSettings.AutoHBMService"
		 android:exported="false" />

        <!-- FPS Info Service -->
        <service android:name="org.spark.device.DeviceSettings.FPSInfoService"
                android:exported="false">
        </service>

        <!-- FPS Tile -->
        <service
            android:name=".FPSTileService"
            android:icon="@drawable/ic_fps_overlay"
            android:label="@string/fps_info_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- Game Mode Tile -->
        <service
            android:name="org.spark.device.DeviceSettings.GameModeTileService"
            android:icon="@drawable/ic_game_mode"
            android:label="@string/game_mode_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- Edge Touch Tile -->
        <service
            android:name="org.spark.device.DeviceSettings.EdgeTouchTileService"
            android:icon="@drawable/ic_edge_touch"
            android:label="@string/edge_touch_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- Search Indexing -->
        <provider
            android:name=".ConfigPanelSearchIndexablesProvider"
            android:authorities="org.spark.device"
            android:multiprocess="false"
            android:grantUriPermissions="true"
            android:permission="android.permission.READ_SEARCH_INDEXABLES"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.action.SEARCH_INDEXABLES_PROVIDER" />
            </intent-filter>
        </provider>
    </application>
</manifest>
